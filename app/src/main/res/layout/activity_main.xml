<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/holo_green_light"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_amount"
        android:hint="Capital emprunté"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:background="@android:color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_rate"
        android:hint="Taux"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_loan_length"
        android:hint="Durée en années"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_ptz"
        android:hint="PTZ"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_insurance_rate"
        android:hint="Taux assurance"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_insurance_quotity"
        android:entries="@array/quotite"
        android:padding="10dp"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_dark"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_submit"
        android:text="submit"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"/>
    <Space
        android:layout_width="20dp"
        android:layout_height="0dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_clear"
        android:text="clear"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"/>
</LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_png"
        android:text="submit"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@mipmap/papoulsous"/>

</LinearLayout>