<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.2" >

        <TextView
            style="@style/LabelText"
            android:layout_weight="1"
            android:hint="Coût du crédit"
            tools:ignore="RtlCompat" />
        <TextView
            style="@style/LabelText"
            android:hint="Mensualités hors assurances"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.5" >

        <TextView
            style="@style/ValueText"
            android:id="@+id/tv_loan_price"
            android:hint="Loan "
            android:inputType="text"
            tools:ignore="RtlCompat"/>

        <TextView
            style="@style/ValueText"
            android:id="@+id/tv_monthly_payment_no_insurance"
            android:hint="Monthly payment"
            android:inputType="text"
            tools:ignore="RtlCompat"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.2" >

        <TextView
            style="@style/LabelText"
            android:hint="Coût assurance"
            tools:ignore="RtlCompat" />

        <TextView
            style="@style/LabelText"
            android:hint="Mensualités assurance"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.5" >

        <TextView
            style="@style/ValueText"
            android:hint="insurance price"
            android:id="@+id/tv_loan_insurance"
            android:inputType="text"
            tools:ignore="RtlCompat"/>
        <TextView
            style="@style/ValueText"
            android:hint="insurance monthly"
            android:id="@+id/tv_monthly_insurance"
            android:inputType="text"
            tools:ignore="RtlCompat"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.2" >

        <TextView
            style="@style/LabelText"
            android:hint="Frais notaire"
            tools:ignore="RtlCompat" />

        <TextView
            style="@style/LabelText"
            android:hint="TOTAL ALL INCLUSIVE"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.5" >

        <EditText
            style="@style/ValueText"
            android:id="@+id/tv_notary_fees"
            android:hint="notary fees"
            android:inputType="text"/>

        <EditText
            style="@style/ValueTextTotal"
            android:id="@+id/tv_total"
            android:hint="Coût total"
            android:inputType="text"/>
    </LinearLayout>
</LinearLayout>
